<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
  <record id="stock_warehouse_orderpoint_view_tree_editable" model="ir.ui.view">
    <field name="model">stock.warehouse.orderpoint</field>
    <field name="inherit_id" ref="stock.view_warehouse_orderpoint_tree_editable" />
    <field name="arch" type="xml">
      <button name="action_product_forecast_report" position="before">
        <field name="virtual_available" optional="show" />
      </button>
      <button name="action_product_forecast_report" position="after">
        <field name="incoming_qty" optional="hide" />
        <field name="outgoing_qty" optional="hide" />
        <field name="incoming_draft_qty" optional="hide" />
        <field name="outgoing_draft_qty" optional="hide" />
        <field name="virtual_draft_available" optional="hide" />
      </button>
      <field name="active" position="after">
        <field name="name" readonly="1" />
      </field>
    </field>
  </record>

  <record id="stock_warehouse_orderpoint_view_form" model="ir.ui.view">
    <field name="model">stock.warehouse.orderpoint</field>
    <field name="inherit_id" ref="stock.view_warehouse_orderpoint_form" />
    <field name="arch" type="xml">
      <xpath expr="//field[@name='company_id']/.." position="after">
        <group name="usability_group">
          <label for="qty_on_hand" />
          <div class="o_row">
            <field name="qty_on_hand" />
            <field name="product_uom_name" />
          </div>
          <label for="qty_forecast" />
          <div class="o_row">
            <field name="qty_forecast" />
            <field name="product_uom_name" />
          </div>
          <label for="virtual_available" />
          <div class="o_row">
            <field name="virtual_available" />
            <field name="product_uom_name" />
          </div>
          <label for="qty_to_order" />
          <div class="o_row">
            <field name="qty_to_order" />
            <field name="product_uom_name" />
          </div>
          <label for="incoming_qty" />
          <div class="o_row">
            <field name="incoming_qty" />
            <field name="product_uom_name" />
          </div>
          <label for="outgoing_qty" />
          <div class="o_row">
            <field name="outgoing_qty" />
            <field name="product_uom_name" />
          </div>
        </group>
      </xpath>
    </field>
  </record>
</odoo>
